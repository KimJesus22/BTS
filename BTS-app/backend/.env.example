# ===========================================
# BTS-app Backend - Variables de Entorno
# ===========================================

# Configuración de la base de datos
# MONGODB_URI=mongodb://localhost:27017/bts-app
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bts_app
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres

# Configuración del servidor
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Configuración de JWT (REQUERIDO - Cambiar en producción)
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Configuración de logging
LOG_LEVEL=info

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_API_MAX=1000

# Configuración de seguridad
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=7200000

# Configuración de gamificación
GAMIFICATION_ENABLED=true
LEVEL_THRESHOLD_BASE=1000
LEVEL_THRESHOLD_MULTIPLIER=1.2

# Configuración de wearables
WEARABLE_SYNC_INTERVAL=900000
WEARABLE_DATA_RETENTION_DAYS=365
WEARABLE_BATTERY_WARNING=20
WEARABLE_MAX_READINGS_PER_SYNC=100

# Configuración de accesibilidad
ACCESSIBILITY_SUPPORTED_LANGUAGES=es,en
ACCESSIBILITY_FONT_SIZES=small,medium,large,extra-large
ACCESSIBILITY_COLOR_SCHEMES=default,high-contrast,dark,light,colorblind-friendly

# Configuración de optimizaciones
CACHE_TIMEOUT=300000
COMPRESSION_LEVEL=6
QUERY_TIMEOUT=5000

# Configuración de servicios externos (opcional)
# REDIS_URL=redis://localhost:6379
# EMAIL_SERVICE_API_KEY=your-email-service-key
# PUSH_NOTIFICATION_KEY=your-push-notification-key